<%- include("partials/header.ejs") %>
<div class="bodyDiv">
  <h1>Edit <%= task[0].title %></h1>
  <form action="/home/viewTask/editTask/<%= task[0]._id %>" method="POST" autocomplete="off">
    <div class="form-group">
      <label for="#title">Title</label>
      <input value="<%= task[0].title %>" class="form-control" maxlength="5" id="title" type="text" name="title" placeholder="Enter the Task Title">
    </div>
    <div class="form-group">
      <label for="#des">Description</label>
      <input value="<%= task[0].description %>" class="form-control" id="des" type="text" name="description" placeholder="Description of Task">
    </div>
    <div class="form-group">
      <label>Due Date</label>
      <input class="form-control" id="dueDate" type="date" name="dueDate" placeholder="Due Date of Task">
      <input class="form-control" type="time" name="time" placeholder="Time Due By">
    </div>
    <div class="form-group">
      <label for="#imp">Importance</label>
      <input value="<%= task[0].importance %>" class="form-control" id="imp" type="number" name="importance" placeholder="Importance from 1-5" min="1" max="5">
    </div>
    <button class="btn btn-warning">Change</button>
  </form>
  <button onclick="window.location='/home/viewTask/<%= task[0]._id %>';" class="btn btn-primary">Cancel</button>
</div>
<%- include("partials/footer.ejs") %>
